<!DOCTYPE html>
<html lang="{{ currentSite.language }}">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		{% if craft.app.config.env != 'production' %}
			<meta name="robots" content="noindex">
			<meta name="googlebot" content="noindex">
		{% endif %}

		{# {% hook 'seo' %} #}
		{% include '_partials/favicon' %}

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:ital,wght@0,500;1,600&display=swap" rel="stylesheet">

		{{ craft.vite.script("src/index.ts") }}

		{% block script %}{% endblock %}

		{% block head %}{% endblock %}
	</head>
	<body {% block bodyAttributes %} {% endblock %}>

    {% block header %}{% endblock %}
		{% block content %}{% endblock %}
		{% block footer %}{% endblock %}
		{% block deferredScript %}{% endblock %}
	</body>
</html>